<body>
	<div class="text-center">
		<div class="card w-200 mx-auto">
			<%= image_tag 'DAISY.png' , class: "mb-4 mx-auto" , style: "width: 72px; height: 72px;" %>
				<div class="card-body">
					<h1 class="h3 mb-3 font-weight-normal">Sign In</h1>
					<div class="text-center">
						<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
							<div class="form-group">
								<%= f.email_field :email, class: "form-control" , placeholder: "Email" , autofocus:
									true, autocomplete: "email" %>
									<%= f.password_field :password, class: "form-control" , placeholder: "Password" ,
										autocomplete: "current-password" %>
							</div>
							</br>
							<div class="form-group">
								<% if devise_mapping.rememberable? %>
									<%= f.check_box :remember_me %>
										<%= f.label :remember_me %>
											<% end %>
							</div>
							</br>
							<%= f.submit "Sign In" , class: "btn btn-primary text-white" %>
							<%= link_to "Register", new_user_registration_path, class:'btn btn-dark'%>
								<% end %>
					</div>

				</div>
		</div>
	</div>
</body>