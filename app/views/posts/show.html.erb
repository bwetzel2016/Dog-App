<div class="container">
  <div class="row justify-content-center mt-5"> 
    <div class="col-md-4"> 
      <div class="card bg-light"> 
        <div class="card-header text-center">
    <h4>Details</h4>
  </div>

  <ul class="list-group list-group-flush">
    <li class="list-group-item"><p>
  <strong>First name:</strong>
  <%= @post.first_name %>
  </p></li>
  <li class="list-group-item"><p>
  <strong>Last name:</strong>
  <%= @post.last_name %>
  </p></li>
  <li class="list-group-item"><p>
  <strong>Znumber:</strong>
  <%= @post.znumber %>
  </p></li>
  <li class="list-group-item"><p>
  <strong>Email:</strong>
  <%= @post.email %>
  </p></li>
  <li class="list-group-item"><p>
  <strong>Advisor:</strong>
  <%= @post.advisor %>
  </p></li>
  <li class="list-group-item"><p>
  <strong>Date:</strong>
  <%= @post.date %>
  </p></li>
  <li class="list-group-item"><p>
  <strong>Time:</strong>
  <%= @post.time&.strftime('%I:%M %p') %>
  </p></li>
  <li class="list-group-item"><p>
  <strong>Image:</strong>
  <%= @post.image %>
  
<br/>
<%= link_to 'Edit', edit_post_path(@post), class:"btn btn-dark" %> 
<%= link_to 'Back', posts_path, class:"btn btn-danger" %>
