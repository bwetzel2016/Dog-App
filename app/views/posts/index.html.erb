<p id="notice"><%= notice %></p>





<table class="table table-bordered table-striped table-light table-hover">
  <thead class="thead-dark">
      <th>First name</th>
      <th>Last name</th>
      <th>Znumber</th>
      <th>Email</th>
      <th>Advisor</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>




  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.first_name %></td>
        <td><%= post.last_name %></td>
        <td><%= post.znumber %></td>
        <td><%= post.email %></td>
        <td><%= post.advisor %></td>
        <td><%= post.date %></td>
        <td><%= post.time&.strftime('%I:%M %p') %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class:"btn btn-secondary" %>
